<% include ../partials/header.ejs %>

<div class="w3-light-grey">

<!-- Page Container -->
<div class="w3-content w3-margin-top" style="max-width:1400px;">

  <!-- The Grid -->
  <div class="w3-row-padding">
  
    <!-- Left Column -->
    <div class="w3-third">
    
      <div class="w3-white w3-text-grey w3-card-4">
        <div class="w3-display-container">
          <img src="/Assets/images/employer.png" style="width:100%" alt="Avatar">
          <div class="w3-display-bottomleft w3-container w3-text-black">
            <h2><%= companyName %></h2>
          </div>
        </div>
        <div class="w3-container">
          <p><i class="fa fa-location-arrow fa-fw w3-margin-right w3-large w3-text-teal"></i><%= address %></p>
          <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i><%= email %></p>
          <p><i class="fa fa-industry fa-fw w3-margin-right w3-large w3-text-teal"></i><%= industry %></p>
          <p><i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal"></i><%= number %></p>
          <p><i class="fa fa-internet-explorer fa-fw w3-margin-right w3-large w3-text-teal"></i><%= website%></p>
          <hr>
          <a href="/users/editEmp/<%= userid %>">Edit Account</a>
          
          <br>
        </div>
      </div><br>

    <!-- End Left Column -->
    </div>

    <!-- Right Column -->
    <div class="w3-twothird">
    
      <div class="w3-container w3-card-2 w3-white w3-margin-bottom">
        <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Jobs you posted</h2>
        <div class="w3-container">
          <ul class="list-group">
          <% var counter=0;
          posteJobCollection.forEach(function(item) {  
            %>
          <li class="list-group-item">
          
          <a href="/jobs/<%= postedKeyid[counter] %>"><%= item.title %></a>
          </li>
          <% counter=counter+1 %>
          <% }) %>
          </ul>


          
        </div>
        
   
      </div>

      

    <!-- End Right Column -->
    </div>
    
  <!-- End Grid -->
  </div>
  
  <!-- End Page Container -->
</div>


  </div>

<% include ../partials/footer.ejs %>